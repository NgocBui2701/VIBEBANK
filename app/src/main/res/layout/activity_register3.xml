<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/register3">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_arrow_back_ios_new_24"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Đăng ký tài khoản"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cung cấp ảnh Căn cước/CCCD"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Để xác thực tài khoản theo quy định, chúng tôi cần bạn cung cấp ảnh để lưu trữ thân."
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/nunito_sans"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng đặt CCCD của bạn vào trong khung hình và đảm bảo các điều kiện sau:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/nunito_sans"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ảnh rõ nét, không bị mờ lòa sáng.\n• Đầy đủ 4 góc của CCCD."
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/nunito_sans"
                android:layout_marginBottom="24dp" />

            <!-- Mặt trước Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:tint="#FFFFFF"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MẶT TRƯỚC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/nunito_sans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút chụp mặt trước -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCaptureFront"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:text="CHỤP MẶT TRƯỚC"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_sans"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp" />

            <!-- Mặt sau Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:tint="#FFFFFF"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MẶT SAU"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/nunito_sans" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút chụp mặt sau -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCaptureBack"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="30dp"
                android:text="CHỤP MẶT SAU"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_sans"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Nút tiếp theo -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="TIẾP THEO"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="#000000"
        app:cornerRadius="5dp" />

</LinearLayout>
