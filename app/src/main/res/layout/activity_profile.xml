<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hồ sơ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toStartOf="@id/btnEditProfile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Edit Profile Button -->
        <ImageView
            android:id="@+id/btnEditProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Avatar & Name Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:background="@color/white">

                <!-- Avatar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="3dp"
                    app:strokeColor="#F0F0F0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_avatar_placeholder"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Camera Icon -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnChangeAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_camera"
                    app:fabSize="mini"
                    app:tint="@color/white"
                    app:backgroundTint="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/cardAvatar"
                    app:layout_constraintBottom_toBottomOf="@id/cardAvatar" />

                <!-- Name -->
                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRẦN NHỰT ĐÔNG KHÔI"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_sans"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardAvatar" />

                <!-- Phone -->
                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0364953666"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/nunito_sans"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtUserName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F5F5F5" />

            <!-- Account Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin tài khoản"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Account Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số tài khoản"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/nunito_sans" />

                        <TextView
                            android:id="@+id/txtAccountNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234 5678 9012"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans" />

                    </LinearLayout>

                    <!-- Account Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loại tài khoản"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/nunito_sans" />

                        <TextView
                            android:id="@+id/txtAccountType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cá nhân"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans" />

                    </LinearLayout>

                    <!-- Open Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngày mở tài khoản"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/nunito_sans" />

                        <TextView
                            android:id="@+id/txtOpenDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/08/2023"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Personal Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thông tin cá nhân"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans" />

                        <TextView
                            android:id="@+id/btnEditPersonalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh sửa"
                            android:textSize="12sp"
                            android:textColor="#1E88E5"
                            android:fontFamily="@font/nunito_sans"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Info Items -->
                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemBirthday" />

                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemGender" />

                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemCCCD" />

                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemAddress" />

                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemIssueDate" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thông tin liên hệ"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans" />

                        <TextView
                            android:id="@+id/btnEditContactInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh sửa"
                            android:textSize="12sp"
                            android:textColor="#1E88E5"
                            android:fontFamily="@font/nunito_sans"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemContactPhone" />

                    <include layout="@layout/item_profile_info"
                        android:id="@+id/itemEmail" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Security Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bảo mật"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Change Password -->
                    <LinearLayout
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_lock"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đổi mật khẩu"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans"
                            android:layout_marginStart="12dp" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#999999" />

                    </LinearLayout>

                    <!-- Biometric -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_fingerprint"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sinh trắc học"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans"
                            android:layout_marginStart="12dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchBiometric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cài đặt"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Night Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_night_mode"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chế độ tối"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans"
                            android:layout_marginStart="12dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchNightMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Language -->
                    <LinearLayout
                        android:id="@+id/btnLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_language"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngôn ngữ"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/txtCurrentLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiếng Việt"
                            android:textSize="13sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/nunito_sans"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#999999" />

                    </LinearLayout>

                    <!-- Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_notification"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thông báo"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_sans"
                            android:layout_marginStart="12dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Đăng xuất"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_sans"
                android:textColor="@color/white"
                android:backgroundTint="#F44336"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
