<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transferResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả chuyển tiền"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnComplete">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <!-- Success Icon -->
            <ImageView
                android:id="@+id/imgResultIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_check_circle"
                android:contentDescription="Success"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/txtResultStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển tiền thành công"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="8dp" />

            <!-- Amount -->
            <TextView
                android:id="@+id/txtResultAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500,000 VND"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="40dp" />

            <!-- Transaction Details Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_border"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết giao dịch"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Recipient Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Người nhận"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailRecipientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGUYEN QUOC BAO"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Recipient Account -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số tài khoản"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailRecipientAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0365349666"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Bank Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngân hàng"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailRecipientBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIBEBANK"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Message -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nội dung"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tien an"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="end" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="12dp" />

                <!-- Transaction Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày giao dịch"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/12/2024 14:35:22"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Transaction ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã giao dịch"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailTransactionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FT24352147896321"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Reference Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã tham chiếu"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtDetailReferenceId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REF987654321"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <!-- VNPAY Information Card (for external transfers) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVNPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin thanh toán qua VNPAY"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="16dp" />

                    <!-- VNPAY Transaction ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã GD VNPAY"
                            android:textSize="14sp"
                            android:textColor="#2E7D32" />

                        <TextView
                            android:id="@+id/txtVNPayTransactionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VNP_20240112_12345678"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="#1B5E20" />

                    </LinearLayout>

                    <!-- Bank Transaction ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã GD ngân hàng"
                            android:textSize="14sp"
                            android:textColor="#2E7D32" />

                        <TextView
                            android:id="@+id/txtBankTransactionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FT25123456789012"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textColor="#1B5E20" />

                    </LinearLayout>

                    <!-- Transfer Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí giao dịch"
                            android:textSize="14sp"
                            android:textColor="#2E7D32" />

                        <TextView
                            android:id="@+id/txtTransferFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.500 đ"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1B5E20" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->

        </LinearLayout>

    </ScrollView>

    <!-- Complete Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComplete"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="HOÀN THÀNH"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        app:cornerRadius="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
